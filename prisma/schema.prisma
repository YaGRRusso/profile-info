generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  picture      String
  name         String
  nickname     String   @unique
  email        String   @unique
  phone        String   @unique
  birth        DateTime
  title        String
  presentation String
  description  String
  address      String
  postal       String
}

