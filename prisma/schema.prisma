// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  picture      String
  name         String
  nickname     String   @unique
  email        String   @unique
  phone        String   @unique
  birth        DateTime
  title        String
  presentation String
  description  String
  address      String
  postal       String
}

model Skill {
  id       String @id @default(cuid())
  name     String
  level    String
  category String

  projects Project[]
}

model Project {
  id          String @id @default(cuid())
  name        String
  description String
  image       String
  link        String

  skills Skill[]
}
